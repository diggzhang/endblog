<%- include header %>

<% posts.forEach(function (post, index) { %>
<p>
    <h2>
        <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
    </h2>

    <a href="/u/<%= post.name %>"><img src="<%= post.head %>" alt="" class="r_head"/></a>
</p>

<p class="info">
    Author: <a href="/u/<%= post.name %>"><%= post.name %></a> |
    PublishTime: <%= post.time.minute %> |
    Tag:
    <% post.tags.forEach(function (tag, index) { %>
    <% if (tag) { %>
    <a href="/tags/<%= tag %>" class="tag"><%= tag %></a>
    <% } %>
    <% }); %>
</p>
<p><%- post.post %></p>

<p class="info">PV: <%= post.pv %> | CommentCount: <%= post.comments.length %></p>

<% }) %>

<%- include paging %>
<%- include footer %>