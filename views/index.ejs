<%- include header %>

<% posts.forEach(function (post, index) { %>
<p>
    <h2>
        <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
    </h2>

    <a href="/u/<%= post.name %>"><img src="<%= post.head %>" alt="" class="r_head"/></a>
</p>

<p class="info">
    Author: <a href="/u/<%= post.name %>"><%= post.name %></a> |
    PublishTime: <%= post.time.minute %> |
    Tag:
    <% post.tags.forEach(function (tag, index) { %>
    <% if (tag) { %>
    <a href="/tags/<%= tag %>" class="tag"><%= tag %></a>
    <% } %>
    <% }); %>

    <% if (post.reprint_info.reprint_from.name) { %>
        <br>
        <a href="/u/<%= post.reprint_info.reprint_from.name %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a></br>
    <% } %>
</p>
<p><%- post.post %></p>

<p class="info">
    PV: <%= post.pv %> |
    CommentCount: <%= post.comments.length %>
    RePrint:
    <% if (post.reprint_info.repeat_to) { %>
        <%= post.reprint_info.reprint_to.length %>
    <% } else { %>
        <%= 0 %>
    <% } %>
</p>

<% }) %>

<%- include paging %>
<%- include footer %>